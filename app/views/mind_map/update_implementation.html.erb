<section class="p-5">
  <h2 class="text-xl font-xl font-semibold">Update implementation Here</h2>
  <%= form_with(model: @implementation, url: update_imple_path(@id), method: "patch") do |f| %>
      <div class="my-5">
          <%= f.label :details, class: "block" %>
          <%= f.text_field :details, id: "step-title", class: "px-2 py-1 border border-black my-2 rounded", value: @implementation.details %>
        </div>
        <%= f.hidden_field :step_id, id: "step-id", value: @step_id %>
        <%= f.hidden_field :map_id, id: "map-id", value: @map_id %>
        <div class="flex items-center gap-5">
          <%= link_to "Back", implementations_path(id:@step_id, map_id: @map_id) %>
          <%= f.submit "Edit", class: "px-2 py-1 rounded bg-purple-500 text-white hover:bg-purple-700" %>
        </div>
  <% end %>
</section>