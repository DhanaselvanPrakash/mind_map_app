<section class="p-5 flex flex-col justify-center items-center">
  <h2 class="text-xl font-bold">Forgot your password?</h2>

  <div class="forgot-form-wrapper my-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-2 py-1 border border-black rounded my-2" %>
      </div>

      <div class="actions my-2">
        <%= f.submit "Send me reset password instructions", class: "px-2 py-1 bg-green-500 hover:bg-green-700 text-white rounded" %>
      </div>
    <% end %>
  </div>

<%= render "devise/shared/links" %>
</section>
